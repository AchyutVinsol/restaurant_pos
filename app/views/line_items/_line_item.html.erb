<% @line_item = line_item %>
<table class="table table-striped table-hover" >
  <thead>
    <tr>
      <th>#</th>
      <th>Meal</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @line_item.id %></td>
      <td><%= @line_item.meal.name %></td>
      <td><%= @line_item.quantity %></td>
      <td><%= @line_item.price %></td>
      <td><%= @line_item.price * @line_item.quantity %></td>
    </tr>
  </tbody>
</table>
<div class = "row">
  <div class='col-md-6 pull-right'>
    <h3>Extra Items</h3>
    <table class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>#</th>
          <th>Ingredient</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <%= render @line_item.extra_items %>
      </tbody>
    </table>
  </div>
</div>
