<h3>Current Order</h3>
<div class = "row">
  <div class='col-md-10'>
    <%= @order.status %>
    <%= number_to_currency(@order.price) %>
    <table class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Meal</th>
          <th>Quantity</th>
          <th>Price</th>
          <th width="30%">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= line_item.meal.name %></td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.price %></td>
            <td><%= line_item.price * line_item.quantity %> <small>(Excluding Extra items)</small></td>
          </tr>
          <% if line_item.extra_items.present? %>
          <tr>
            <td colspan ='2'>
            </td>
            <td colspan="2">
            <h4>Extra Items</h4>
            <table class="table table-striped table-hover" >
              <thead>
                <tr>
                  <th>Ingredient</th>
                  <th width="30%">Price</th>
                </tr>
              </thead>
              <tbody>
                <% extra_total = 0 %>
                <% line_item.extra_items.each do |extra_item| %>
                  <tr>
                    <td><%= extra_item.ingredient.name %></td>
                    <td><%= extra_item.price %></td>
                  </tr>
                  <% extra_total += extra_item.price %>
                <% end %>
              </tbody>
            </table>
            </td>
          </tr>
          <% end %>  
          <tr>
            <% meal_total = (extra_total + line_item.price) * line_item.quantity %>  
            <td colspan="4" align="right"><b>Meal Total&nbsp;:&nbsp;</b><%= meal_total %></td>
          </tr>  
          <tr>
            <td colspan="4">&nbsp;</td>
          </tr>         
        <% end %>
      </tbody>
    </table>
  </div>
</div>
