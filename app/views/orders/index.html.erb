<div class = "row">
  <div class='col-md-12'>
    <h2>Listing orders</h2>
    <%= render partial: 'shared/modal' %>
    <table class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Location</th>
          <th>Placed At</th>
          <th>Pickup Time</th>
          <th>Status</th>
          <th>Contact Number</th>
          <th>Price</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.location.name %></td>
            <td><%= order.placed_at.to_s(:short) %></td>
            <td><%= order.pickup_time.to_s(:time) %></td>
            <td><%= order.status %></td>
            <td><%= order.contact_number %></td>
            <td><%= number_to_currency(order.price) %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'Show', details_user_order_path(@user, order), class: 'btn btn-info' %>
                <% if order.cancelable? %>
                  <%= link_to 'Cancel', user_order_path(@user, order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
