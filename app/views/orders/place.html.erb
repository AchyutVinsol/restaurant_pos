<h2>Your order has been placed, the details are:</h2>
<div class = "row">
  <div class='col-md-10'>
  <article>
    <h4>Contact Number: <%= @order.contact_number %></h4>
    <h4>Pickup Time: <%= @order.pickup_time.strftime("%I:%M%p") %></h4>
    <h4>Meal Price: <%= number_to_currency(@order.price) %></h4>
  </article>
    <table class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Meal</th>
          <th>Quantity</th>
          <th>Price</th>
          <th width="30%">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr class="success">
            <td><%= line_item.meal.name %></td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.price %></td>
            <td><%= line_item.price * line_item.quantity %> <small>(Excluding Extra items)</small></td>
          </tr>
          <% if line_item.extra_items.present? %>
          <tr>
            <td colspan ='2'>
            </td>
            <td colspan="2">
            <h4>Extra Items</h4>
            <table class="table table-striped table-hover" >
              <thead>
                <tr>
                  <th>Ingredient</th>
                  <th width="30%">Price</th>
                </tr>
              </thead>
              <tbody>
                <% line_item.extra_items.each do |extra_item| %>
                  <tr class="warning">
                    <td><%= extra_item.ingredient.name %></td>
                    <td><%= extra_item.price %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            </td>
          </tr>
          <% end %>
          <tr class="info">
            <% meal_total = line_item.total * line_item.quantity %>
            <td colspan="4" align="right"><b>Meal Total&nbsp;:&nbsp;</b><%= meal_total %></td>
          </tr>
          <tr>
            <td colspan="4">&nbsp;</td>
          </tr>
        <% end %>
        <tr class="danger">
          <td colspan="4" align="right"><b>Grand Total&nbsp;:&nbsp;</b><%= number_to_currency(@order.price) %></td>
        </tr>
      </tbody>
    </table>
    <br></br>
  </div>
</div>
