<% if flash[:notice] %>
  <div>
    <p class="alert alert-dismissible alert-success"><%= flash[:notice] %></p>
  </div>
<% elsif flash[:error] %>
  <div>
    <p class="alert alert-dismissible alert-warning"><%= flash[:error] %></p>
  </div>
<% elsif flash[:alert] %>
  <div>
    <p class="alert alert-dismissible alert-danger"><%= flash[:alert] %></p>
  </div>
<% end %>