<div class="well well-sm">
  <%= nested_form_for([:admin, @meal], html: {class: 'form-horizontal'}) do |builder| %>
    <%= render partial: 'shared/errors', locals: { object: @location } %>
    <fieldset>
      <legend>Enter location Details</legend>
      <div class="form-group">
        <%= builder.label :name, "Name:", class: "col-md-2 control-label" %>
        <div class="col-md-8">
          <%= builder.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :price, "Price:", class: "col-md-2 control-label" %>
        <div class="col-md-8">
          <%= f.number_field :price, class: "form-control", step: "0.01" %>
        </div>
      </div>
      <%= render partial: 'admin/recipe_items/form', locals: { object: builder } %>
      <%= f.fields_for :order_details do |li| %>
        <%= li.text_field :materials %>
        <%= li.text_field  :qty  %>
        <%= li.link_to_remove "Remove item" %>
      <% end %>
      <%= f.link_to_add "Add ingredient", :recipe_items %>

      <div class="form-group">
        <div class="col-md-8 col-md-offset-2">
          <%= builder.submit "Submit", class: "btn btn-default btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
