<div class = "row">
  <div class='col-md-12'>
    <div class="btn-group pull-right">
      <%= link_to 'New meal', new_admin_meal_path, class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_admin_meal_path(@meal), class: 'btn btn-warning' %>
      <%= link_to 'Destroy', admin_meal_path(@meal), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    </div>
    <h3>
      <%= "Meal: #{ @meal.name }" %>
    </h3>
    <h3>
      <%= "Price: #{ number_to_currency(@meal.price) }" %>
    </h3>
    <h3>Listing recipe items</h3>
    <table  class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>Ingredient</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @meal.recipe_items.each do |recipe_item| %>
          <%= render recipe_item %>
        <% end %>
      </tbody>
    </table>    
    </br>
  </div>
</div>
