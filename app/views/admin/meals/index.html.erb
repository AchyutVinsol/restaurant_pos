<div class = "row">
  <div class='col-md-12'>
    <div class="btn-group pull-right">
      <%= link_to 'New Meal', new_admin_meal_path, class: 'btn btn-primary' %>
    </div>
    <h2>Listing meals</h2>
    <%= render partial: 'shared/modal' %>
    <table class="table table-striped table-hover" >
      <%= javascript_include_tag 'admin/meals' %>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Price</th>
          <th>Image</th>
          <th>Meal Status</th>
          <th>Change Status</th>
          <th>Admin Options</th>
        </tr>
      </thead>
      <tbody>
        <%= render(@meals) %>
      </tbody>
    </table>
  </div>
</div>
