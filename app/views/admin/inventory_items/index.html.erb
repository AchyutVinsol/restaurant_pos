<div class='col-md-8'>
  <h1>Listing inventory items</h1>
  <table  class="table table-striped table-hover" >
    <%= javascript_include_tag 'admin/inventory_items' %>
    <thead>
      <tr>
        <th>#</th>
        <th>Ingredient</th>
        <th>Location</th>
        <th>Increase Quantity</th>
        <th>Quantity</th>
        <th>Decrease Quantity</th>
      </tr>
    </thead>
    <tbody>
      <%= render(@inventory_items) %>
    </tbody>
  </table>
  <br/>
</div>
<%= link_to 'New Ingredient', new_admin_ingredient_path %>
