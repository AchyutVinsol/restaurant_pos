<div class = "row">
  <div class='col-md-12'>
    <div class="btn-group pull-right">
      <%= link_to 'New Ingredient', new_admin_ingredient_path, class: 'btn btn-primary' %>
    </div>
    <h2>Listing inventory items</h2>
    <%= render partial: 'shared/modal' %>
    <table  class="table table-striped table-hover" >
      <%= javascript_include_tag 'admin/inventory_items' %>
      <thead>
        <tr>
          <th>#</th>
          <th>Ingredient</th>
          <th>Location</th>
          <th>Increase Quantity</th>
          <th>Quantity</th>
          <th>Decrease Quantity</th>
        </tr>
      </thead>
      <tbody>
        <%= render(@inventory_items) %>
      </tbody>
    </table>
    <br/>
  </div>
</div>