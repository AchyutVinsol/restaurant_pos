<% inventory_item ||= @inventory_item %>
<tr>
  <td><%= inventory_item.id %></td>
  <td><%= inventory_item.ingredient.name %></td>
  <td><%= inventory_item.location.name %></td>
  <td>
    <%= form_for(inventory_item, url: increase_quantity_admin_inventory_item_path(inventory_item) , html: {class: 'form-horizontal', :"data-behaviour" => 'change_quantity'}, remote: true, format: :json ) do |f| %>
      <%= f.button :+, class: "btn btn-default btn-success" %>
      <%= text_field_tag :increase_quantity %>
    <% end %>
  </td>
  <td data-class='quantity'><%= inventory_item.quantity %></td>
  <td>
    <%= form_for(inventory_item, url: decrease_quantity_admin_inventory_item_path(inventory_item) , html: {class: 'form-horizontal', :"data-behaviour" => 'change_quantity'}, remote: true, format: :json ) do |f| %>
      <%= text_field_tag :decrease_quantity %>
      <%= f.button :-, class: "btn btn-default btn-danger" %>
    <% end %>
  </td>
</tr>
