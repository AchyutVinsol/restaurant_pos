@recipe_items ||= recipe_items
<div class = "row">
  <div class='col-md-12'>
    <div class="btn-group pull-right">
      <%= link_to 'New recipe_item', new_admin_recipe_item_path, class: 'btn btn-primary' %>
    </div>
    <h1>Listing recipe_items</h1>
    <table  class="table table-striped table-hover" >
      <thead>
        <tr>
          <th>#</th>
          <th>Ingredient</th>
          <th>Meal</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <%= render(@recipe_items) %>
      </tbody>
    </table>
  </div>
</div>
